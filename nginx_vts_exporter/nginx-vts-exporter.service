[Unit]
Description=Nginx VTS Exporter Prometheus
Documents=https://github.com/hnlq715/nginx-vts-exporter
After=nginx.service

[Service]
User=root
WorkingDirectory=/usr/sbin
ExecStart=/usr/sbin/nginx-vts-exporter \
           -nginx.scrape_uri=http://localhost/status/format/json
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=10s
SendSIGKILL=no
SyslogIdentifier=prometheus_statsd_exporter
Restart=always # or always, on-abort, etc
RestartSec=3

[Install]
WantedBy=multi-user.target